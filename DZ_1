from datetime import datetime

def get_days_from_today(date):
    '''
    Функція розраховує кількість днів між заданою датою і поточною датою.
    Приймає один параметр: date — рядок, що представляє дату у форматі 'РРРР-ММ-ДД'
    '''

    try:
        datetime_data = datetime.strptime(date, '%Y-%m-%d') 
        today = datetime.today()
        rezult = datetime_data.toordinal() - today.toordinal()
        return(rezult)
    
    except ValueError:
        return ("Enter correct date")


print(get_days_from_today('2025-12-21'))
